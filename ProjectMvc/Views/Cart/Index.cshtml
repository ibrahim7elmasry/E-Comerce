@model IEnumerable<ProjectMvc.Models.item>

<h2>AddtoCart</h2>

<!-- /section title -->
<!-- Products tab & slick -->
<div class="section">
    <div class="container">
        <div class="row">


        @*<h2>@Model.Count()</h2>*@
            @foreach (var ite in Model)
            {
                <div class="col-md-3">

                    <!-- product -->
                    <div class="product">
                        <div class="product-img">
                            @*<img src="@item.IamgesList" alt="" height="250">*@
                            <div class="product-label">
                                <span class="new">NEW</span>
                            </div>
                        </div>
                        <div class="product-body">
                            <h3 class="product-name"><a href="#">@ite.ProductItem.productName</a></h3>
                            <h3 class="product-name"><a href="#">@ite.ProductItem.Description</a></h3>
                            <p class="product-category">@ite.ProductItem.Quantity</p>
                            <h4 class="product-price">@ite.ProductItem.Price <del class="product-old-price">@ite.ProductItem.Price</del></h4>
                            <div class="product-rating">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star-o"></i>
                            </div>
                         
                        </div>
                        
                    </div>
                    <!-- /product -->



                </div>

            }

        </div>
    </div>
</div>
<!-- /row -->
    </div>
<!-- /container -->
</div>
<!-- /SECTION -->
